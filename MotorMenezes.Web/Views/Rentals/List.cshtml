@model RentalListViewModel
@using MotorMenezes.Web.Models.ViewModels.RentalViewModel
@using MotorMenezes.Domain.Aggregates.UserAgg.Enums;
@{
    Layout = "~/Views/Shared/_LayoutNovo.cshtml";
    ViewData["ControllerVoltar"] = "Aluguéis";
}

<div class="row">
    <div class="col-12">
        <div class="card mb-4">
            <div class="card-body p-3">
                <div class="row">
                    @if (User.IsInRole(ProfileEnum.Motorcyclist.ToString()))
                    {
                        <div class="col-sm-6 col-md-4 col-lg-3">
                            <a class="btn bg-gradient-dark mb-0 form-control" asp-action="Create">
                                + &nbsp;&nbsp;Adicionar
                            </a>
                        </div>
                    }
                </div>
            </div>
            <div class="card-body px-0 pt-0 pb-2">
                <div class="table-responsive p-0">
                    <table class="table align-items-center mb-0">
                        <thead>
                            <tr>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                    Motociclista
                                </th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">
                                    Plano
                                </th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">
                                    Inicio
                                </th>
                                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">
                                    Fim
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.RentalList)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex px-3 py-1">

                                            <div class="d-flex flex-column justify-content-center">
                                                <p class="text-xs font-weight-bold mb-0">
                                                    @Html.DisplayFor(modelItem => item.User.Name)
                                                </p>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex px-3 py-1">
                                            
                                            <div class="d-flex flex-column justify-content-center">
                                                <p class="text-xs font-weight-bold mb-0">
                                                    @Html.DisplayFor(modelItem => item.Plan.Day)
                                                </p>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex py-1">
                                            <div class="d-flex flex-column justify-content-center">
                                                <p class="text-xs font-weight-bold mb-0">
                                                    @item.StartDate.ToString("dd/MM/yyyy")
                                                </p>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex py-1">
                                            <div class="d-flex flex-column justify-content-center">
                                                <p class="text-xs font-weight-bold mb-0">
                                                    @item.EndDate.ToString("dd/MM/yyyy")
                                                </p>
                                            </div>
                                        </div>
                                    </td>                                    
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
